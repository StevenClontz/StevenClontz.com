!!! 5
%html{lang: "en"}
  = render "_head"

  %body
    = render "_navbar"

    #main.container
      - if @item[:kind] == "article"
        %h1
          Blog
          %small
            %a{href:"/blog/"} [Back to index]
        %h2= @item[:title]
      - else
        %h1= @item[:title]
      - if @item[:kind] == "article"
        %h4
          %small
            Posted on
            = Date.parse(@item[:created_at]).strftime('%Y-%m-%d')
      #content
        = yield

      %p
        %small
          %em 
            Last updated on #{item[:mtime].strftime('%Y-%m-%d')}.

      - if @item[:blog_index]
        %section
          - sorted_articles.each do |article|
            = render "_blog_preview", article: article

    = render "_foot"